{
  "name": "daddia-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": "^22.17.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "site:clean": "turbo run clean --filter=website",
